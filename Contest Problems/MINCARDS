//Question link https://www.codechef.com/problems/MINCARDS

//Solution
#include <iostream>
#define long long int
using namespace std;

int main() {
	int n;
	cin >> n;
	string str;
	int result=0;
	cin >> str;
	for(int i=0;i<str.length()-1;i++)
	{
	    if(str[i]==str[i+1])
	        result++;
	}
	cout << result;
	return 0;
}
